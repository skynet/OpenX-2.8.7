<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="xsl/mdb2_changeset.xsl"?>
<instructionset>
  <name>openads</name>
  <version>326</version>
  <comments>Add fields required by campaigns table</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>326</version>
      <change>
        <table>
          <name>campaigns</name>
          <change>
            <field>
              <name>priority</name>
              <type>openads_int</type>
              <length>11</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>priority</was>
            </field>
          </change>
          <add>
            <field>
              <name>target_impression</name>
              <type>openads_int</type>
              <length>11</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>target_impression</was>
            </field>
              <field>
                <name>target_click</name>
                <type>openads_int</type>
                <length>11</length>
                <notnull>1</notnull>
                <default>0</default>
                <was>target_click</was>
              </field>
                <field>
                  <name>target_conversion</name>
                  <type>openads_int</type>
                  <length>11</length>
                  <notnull>1</notnull>
                  <default>0</default>
                  <was>target_conversion</was>
                </field>
                  <field>
                    <name>companion</name>
                    <type>openads_smallint</type>
                    <length>1</length>
                    <notnull></notnull>
                    <default>0</default>
                    <was>companion</was>
                  </field>
                    <field>
                      <name>comments</name>
                      <type>openads_text</type>
                      <notnull></notnull>
                      <default></default>
                      <was>comments</was>
                    </field>
                      <field>
                        <name>revenue</name>
                        <type>openads_decimal</type>
                        <length>10,4</length>
                        <notnull></notnull>
                        <default></default>
                        <was>revenue</was>
                      </field>
                        <field>
                          <name>revenue_type</name>
                          <type>openads_smallint</type>
                          <length>6</length>
                          <notnull></notnull>
                          <default></default>
                          <was>revenue_type</was>
                        </field>
                          <field>
                            <name>updated</name>
                            <type>openads_datetime</type>
                            <notnull>1</notnull>
                            <default></default>
                            <was>updated</was>
                          </field>
                        </add>
                      </table>
          </change>
        </changeset>
      </constructive>
      <destructive>
        <changeset>
          <name>openads</name>
          <version>326</version>
        </changeset>
      </destructive>
    </instructionset>
