<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="xsl/mdb2_changeset.xsl"?>
<instructionset>
  <name>openads</name>
  <version>328</version>
  <comments>Add fields required by trackers table</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>328</version>
      <change>
          <table>
            <name>trackers</name>
            <add>
              <field>
                <name>status</name>
                <type>openads_smallint</type>
                <unsigned>1</unsigned>
                <length>1</length>
                <notnull>1</notnull>
                <default>4</default>
                <was>status</was>
              </field>
                <field>
                  <name>type</name>
                  <type>openads_smallint</type>
                  <unsigned>1</unsigned>
                  <length>1</length>
                  <notnull>1</notnull>
                  <default>1</default>
                  <was>type</was>
                </field>
                  <field>
                    <name>linkcampaigns</name>
                    <type>openads_enum</type>
                    <length>'t','f'</length>
                    <notnull>1</notnull>
                    <default>f</default>
                    <was>linkcampaigns</was>
                  </field>
                    <field>
                      <name>variablemethod</name>
                      <type>openads_enum</type>
                      <length>'default','js','dom','custom'</length>
                      <notnull>1</notnull>
                      <default>default</default>
                      <was>variablemethod</was>
                    </field>
                      <field>
                        <name>appendcode</name>
                        <type>openads_text</type>
                        <notnull>1</notnull>
                        <default></default>
                        <was>appendcode</was>
                      </field>
                        <field>
                          <name>updated</name>
                          <type>openads_datetime</type>
                          <notnull>1</notnull>
                          <default></default>
                          <was>updated</was>
                        </field>
                      </add>
                    </table>
          </change>
        </changeset>
      </constructive>
      <destructive>
        <changeset>
          <name>openads</name>
          <version>328</version>
        </changeset>
      </destructive>
    </instructionset>
