<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="xsl/mdb2_changeset.xsl"?>
<instructionset>
  <name>openads</name>
  <version>330</version>
  <comments>Add fields required by variables table</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>330</version>
      <change>
          <table>
            <name>variables</name>
            <add>
              <field>
                <name>purpose</name>
                <type>openads_enum</type>
                <length>'basket_value','num_items','post_code'</length>
                <notnull></notnull>
                <default></default>
                <was>purpose</was>
              </field>
                <field>
                  <name>reject_if_empty</name>
                  <type>openads_smallint</type>
                  <unsigned>1</unsigned>
                  <length>1</length>
                  <notnull>1</notnull>
                  <default>0</default>
                  <was>reject_if_empty</was>
                </field>
                  <field>
                    <name>is_unique</name>
                    <type>openads_int</type>
                    <length>11</length>
                    <notnull>1</notnull>
                    <default>0</default>
                    <was>is_unique</was>
                  </field>
                    <field>
                      <name>unique_window</name>
                      <type>openads_int</type>
                      <length>11</length>
                      <notnull>1</notnull>
                      <default>0</default>
                      <was>unique_window</was>
                    </field>
                      <field>
                        <name>variablecode</name>
                        <type>openads_varchar</type>
                        <length>255</length>
                        <notnull>1</notnull>
                        <default></default>
                        <was>variablecode</was>
                      </field>
                        <field>
                          <name>hidden</name>
                          <type>openads_enum</type>
                          <length>'t','f'</length>
                          <notnull>1</notnull>
                          <default>f</default>
                          <was>hidden</was>
                        </field>
                          <field>
                            <name>updated</name>
                            <type>openads_datetime</type>
                            <notnull>1</notnull>
                            <default></default>
                            <was>updated</was>
                          </field>
                        </add>
           </table>
          </change>
        </changeset>
      </constructive>
      <destructive>
        <changeset>
          <name>openads</name>
          <version>330</version>
        </changeset>
      </destructive>
    </instructionset>
