<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="xsl/mdb2_changeset.xsl"?>
<instructionset>
  <name>openads</name>
  <version>601</version>
  <comments>Moved the viewwindow and clickwindow to be properties of the campaign</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>601</version>
      <change>
        <table>
          <name>campaigns</name>
          <add>
            <field>
              <name>viewwindow</name>
              <type>openads_mediumint</type>
              <length>9</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>viewwindow</was>
            </field>
              <field>
                <name>clickwindow</name>
                <type>openads_mediumint</type>
                <length>9</length>
                <notnull>1</notnull>
                <default>0</default>
                <was>clickwindow</was>
              </field>
            </add>
          </table>
            <table>
              <name>campaigns_trackers</name>
          </table>
        </change>
      </changeset>
    </constructive>
    <destructive>
      <changeset>
        <name>openads</name>
        <version>601</version>
        <change>
          <table>
            <name>campaigns_trackers</name>
          <remove>
            <field>
              <name>viewwindow</name>
            </field>
              <field>
                <name>clickwindow</name>
              </field>
            </remove>
          </table>
        </change>
      </changeset>
    </destructive>
  </instructionset>
