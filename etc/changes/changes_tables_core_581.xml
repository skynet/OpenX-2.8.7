<instructionset>
  <name>openads</name>
  <version>581</version>
  <comments>Ad Direct changes</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>581</version>
      <change>
        <table>
          <name>banners</name>
          <add>
            <field>
              <name>ad_direct_status</name>
              <type>openads_tinyint</type>
              <length>4</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>ad_direct_status</was>
            </field>
            <field>
              <name>ad_direct_rejection_reason_id</name>
              <type>openads_tinyint</type>
              <length>4</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>ad_direct_rejection_reason_id</was>
            </field>
          </add>
        </table>
        <table>
          <name>campaigns</name>
          <add>
            <field>
              <name>hosted_views</name>
              <type>openads_int</type>
              <length>11</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>hosted_views</was>
            </field>
            <field>
              <name>hosted_clicks</name>
              <type>openads_int</type>
              <length>11</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>hosted_clicks</was>
            </field>
          </add>
        </table>
        <table>
          <name>users</name>
          <add>
            <field>
              <name>date_created</name>
              <type>openads_datetime</type>
              <notnull>false</notnull>
              <default></default>
              <was>date_created</was>
            </field>
            <field>
              <name>date_last_login</name>
              <type>openads_datetime</type>
              <notnull>false</notnull>
              <default></default>
              <was>date_created</was>
            </field>
          </add>
          <index>
            <add>
              <name>sso_user_id</name>
              <was>sso_user_id</was>
              <unique>true</unique>
              <indexfield>
                <name>sso_user_id</name>
                <sorting>ascending</sorting>
              </indexfield>
            </add>
          </index>
        </table>
        <table>
          <name>zones</name>
          <add>
            <field>
              <name>is_in_ad_direct</name>
              <type>openads_tinyint</type>
              <length>1</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>is_in_ad_direct</was>
            </field>
            <field>
              <name>rate</name>
              <type>openads_decimal</type>
              <length>19,2</length>
              <notnull></notnull>
              <default></default>
              <was>rate</was>
            </field>
            <field>
              <name>pricing</name>
              <type>openads_varchar</type>
              <length>50</length>
              <notnull>1</notnull>
              <default>CPM</default>
              <was>pricing</was>
            </field>
          </add>
        </table>
      </change>
    </changeset>
  </constructive>
  <destructive>
    <changeset>
      <name>openads</name>
      <version>581</version>
    </changeset>
  </destructive>
</instructionset>
