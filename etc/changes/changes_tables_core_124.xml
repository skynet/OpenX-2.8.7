    <changeset>
      <name>openads</name>
      <version>124</version>
      <change>
        <table>
          <name>banners</name>
          <add>
            <field>
              <name>campaignid</name>
              <type>openads_mediumint</type>
              <length>9</length>
              <notnull>1</notnull>
              <default>0</default>
              <was>campaignid</was>
            </field>
              <field>
                <name>adserver</name>
                <type>openads_varchar</type>
                <length>50</length>
                <notnull>1</notnull>
                <default></default>
                <was>adserver</was>
              </field>
                <field>
                  <name>session_capping</name>
                  <type>openads_int</type>
                  <length>11</length>
                  <notnull>1</notnull>
                  <default>0</default>
                  <was>session_capping</was>
                </field>
                  <field>
                    <name>acl_plugins</name>
                    <type>openads_text</type>
                    <notnull>1</notnull>
                    <default></default>
                    <was>acl_plugins</was>
                  </field>
                    <field>
                      <name>alt_filename</name>
                      <type>openads_varchar</type>
                      <length>255</length>
                      <notnull>1</notnull>
                      <default></default>
                      <was>alt_filename</was>
                    </field>
                      <field>
                        <name>alt_imageurl</name>
                        <type>openads_varchar</type>
                        <length>255</length>
                        <notnull>1</notnull>
                        <default></default>
                        <was>alt_imageurl</was>
