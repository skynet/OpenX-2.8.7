                        <field>
                          <name>alt_contenttype</name>
                          <type>openads_enum</type>
                          <length>&apos;gif&apos;,&apos;jpg&apos;,&apos;png&apos;</length>
                          <notnull>1</notnull>
                          <default>gif</default>
                          <was>alt_contenttype</was>
                        </field>
                          <field>
                            <name>comments</name>
                            <type>openads_text</type>
                            <notnull></notnull>
                            <default></default>
                            <was>comments</was>
                          </field>
                            <field>
                              <name>updated</name>
                              <type>openads_datetime</type>
                              <notnull></notnull>
                              <default></default>
                              <was>updated</was>
                            </field>
                          </add>
                          <change>
                            <field>
                              <name>target</name>
                              <length>16</length>
                            </field>
                            <field>
                              <name>url</name>
                              <length></length>
                            </field>
                          </change>
                        </table>
                      </change>
                    </changeset>
                  </constructive>
                  <destructive>
                    <changeset>
                      <name>openads</name>
                      <version>124</version>
                      <change>
                        <table>
                          <name>banners</name>
                        <remove>
                          <field>
                            <name>clientid</name>
                          </field>
                            <field>
                              <name>priority</name>
                            </field>
                          </remove>
                        </table>
                      </change>
                    </changeset>
                  </destructive>
                </instructionset>
