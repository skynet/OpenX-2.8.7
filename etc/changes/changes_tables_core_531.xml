<?xml version="1.0" encoding="ISO-8859-1" ?>
<?xml-stylesheet type="text/xsl" href="xsl/mdb2_changeset.xsl"?>
<instructionset>
  <name>openads</name>
  <version>531</version>
  <comments>Added OAC fields, removed instance_id from preference</comments>
  <constructive>
    <changeset>
      <name>openads</name>
      <version>531</version>
      <change>
        <table>
          <name>affiliates</name>
          <add>
            <field>
              <name>oac_website_id</name>
              <type>openads_int</type>
              <length>11</length>
              <notnull></notnull>
              <default></default>
              <was>oac_website_id</was>
            </field>
          </add>
        </table>
          <table>
            <name>banners</name>
            <add>
              <field>
                <name>oac_banner_id</name>
                <type>openads_int</type>
                <length>11</length>
                <notnull></notnull>
                <default></default>
                <was>oac_banner_id</was>
              </field>
            </add>
          </table>
            <table>
              <name>campaigns</name>
              <add>
                <field>
                  <name>oac_campaign_id</name>
                  <type>openads_int</type>
                  <length>11</length>
                  <notnull></notnull>
                  <default></default>
                  <was>oac_campaign_id</was>
                </field>
              </add>
            </table>
              <table>
                <name>preference</name>
            </table>
          </change>
        </changeset>
      </constructive>
      <destructive>
        <changeset>
          <name>openads</name>
          <version>531</version>
          <change>
            <table>
              <name>preference</name>
            <remove>
              <field>
                <name>instance_id</name>
              </field>
            </remove>
          </table>
        </change>
      </changeset>
    </destructive>
  </instructionset>
